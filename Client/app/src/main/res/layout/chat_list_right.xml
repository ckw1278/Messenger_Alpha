<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="40dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView2"
                android:src="@drawable/right"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/imageView_profileImage"
                android:layout_toStartOf="@+id/imageView_profileImage"
                android:layout_marginTop="10dp"
                android:layout_marginRight="2dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/right_background"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:id="@+id/linearLayout"
                android:layout_toLeftOf="@+id/imageView2"
                android:layout_toStartOf="@+id/imageView2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="zz"
                    android:id="@+id/textView_message"
                    android:textSize="20dp" />

            </LinearLayout>

            <com.example.administrator.messenger.CircularImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/imageView_profileImage"
                android:src="@mipmap/ic_launcher"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/textView_date"
                android:layout_gravity="right"
                android:textColor="@android:color/darker_gray"
                android:textSize="12dp"
                android:text="2015.10.20 22:00"
                android:layout_below="@+id/linearLayout"
                android:layout_alignRight="@+id/linearLayout"
                android:layout_alignEnd="@+id/linearLayout"
                android:layout_marginRight="5dp" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>